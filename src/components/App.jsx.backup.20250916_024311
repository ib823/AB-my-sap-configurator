// Phase Detail Panel Component
const PhaseDetailPanel = ({ phase, isOpen, onClose, updatePhase, deletePhase, duplicatePhase, holidays, clientPresentationMode, BUSINESS_DAY_BASE_DATE, formatDateElegant, calculatePhasePersonDays, calculatePhaseCost, formatCurrency, selectedCatalogRegion }) => {
  if (!phase || !isOpen) return null;

  const businessDayToDate = (index, hols = holidays, skipHolidays = true, baseDate = BUSINESS_DAY_BASE_DATE) => {
    const start = new Date(baseDate);
    const holidaySet = new Set((hols || []).map(h => h.date));
    let d = new Date(start);
    let count = 0;
    if (index <= 0) return d;
    while (count < index) {
      d.setDate(d.getDate() + 1);
      const dow = d.getDay();
      const ymd = d.toISOString().split("T")[0];
      const weekday = dow >= 1 && dow <= 5;
      const isHol = holidaySet.has(ymd);
      if (weekday && (!skipHolidays || !isHol)) count++;
    }
    return d;
  };

  const dateToBusinessDay = (dateInput, hols = holidays, skipHolidays = true, baseDate = BUSINESS_DAY_BASE_DATE) => {
    const target = new Date(dateInput);
    const holidaySet = new Set((hols || []).map(h => h.date));
    const start = new Date(baseDate);
    if (target <= start) return 0;
    let d = new Date(start);
    let idx = 0;
    while (d < target) {
      d.setDate(d.getDate() + 1);
      const dow = d.getDay();
      const ymd = d.toISOString().split("T")[0];
      const weekday = dow >= 1 && dow <= 5;
      const isHol = holidaySet.has(ymd);
      if (weekday && (!skipHolidays || !isHol)) idx++;
    }
    return idx;
  };

  const calculateEndDate = (startDate, workingDays, hols = holidays, skipHolidays = true) => {
    let d = new Date(startDate);
    let added = 0;
    const holidaySet = new Set((hols || []).map((h) => h.date));
    while (added < workingDays) {
      const dow = d.getDay();
      const ymd = d.toISOString().split("T")[0];
      const weekday = dow >= 1 && dow <= 5;
      const isHol = holidaySet.has(ymd);
      if (weekday && (!skipHolidays || !isHol)) added++;
      if (added < workingDays) d.setDate(d.getDate() + 1);
    }
    return d;
  };

  return (
    <div className={`detail-panel ${isOpen ? "open" : ""}`}>
      <div className="detail-header">
        <div style={{ display: "flex", justifyContent: "space-between", alignItems: "center" }}>
          <div>
            <h3 className="detail-title">{phase?.name || "Phase"}</h3>
            <p className="detail-subtitle">
              Ends {formatDateElegant(calculateEndDate(
                businessDayToDate(phase.startBusinessDay, holidays, true, BUSINESS_DAY_BASE_DATE),
                phase.workingDays, holidays, phase.skipHolidays
              ))} ‚Ä¢ {calculatePhasePersonDays(phase)} person-days
              {!clientPresentationMode && ` ‚Ä¢ ${formatCurrency(calculatePhaseCost(phase), selectedCatalogRegion)}`}
            </p>
          </div>
          <button className="secondary-action" onClick={onClose}>Close</button>
        </div>
      </div>

      <div className="detail-content">
        <div className="detail-section">
          <h3 className="section-title">Timeline</h3>
          <div style={{ display: "grid", gridTemplateColumns: "1fr 1fr", gap: "12px" }}>
            <div>
              <label className="form-label">Start Date</label>
              <input
                className="form-input"
                type="date"
                value={businessDayToDate(phase.startBusinessDay, holidays, true, BUSINESS_DAY_BASE_DATE).toISOString().split("T")[0]}
                onChange={(e) => {
                  const newStartDay = dateToBusinessDay(new Date(e.target.value), holidays, true, BUSINESS_DAY_BASE_DATE);
                  updatePhase(phase.id, { startBusinessDay: newStartDay });
                }}
              />
            </div>
            <div>
              <label className="form-label">End Date</label>
              <input
                className="form-input"
                type="date"
                value={calculateEndDate(
                  businessDayToDate(phase.startBusinessDay, holidays, true, BUSINESS_DAY_BASE_DATE),
                  phase.workingDays, holidays, phase.skipHolidays
                ).toISOString().split("T")[0]}
                onChange={(e) => {
                  const endDate = new Date(e.target.value);
                  const startDate = businessDayToDate(phase.startBusinessDay, holidays, true, BUSINESS_DAY_BASE_DATE);
                  if (endDate >= startDate) {
                    const newDuration = dateToBusinessDay(endDate, holidays, phase.skipHolidays, BUSINESS_DAY_BASE_DATE) - phase.startBusinessDay + 1;
                    updatePhase(phase.id, { workingDays: Math.max(1, newDuration) });
                  }
                }}
              />
            </div>
          </div>
          <div style={{ marginTop: "16px" }}>
            <label className="form-checkbox">
              <input
                className="checkbox"
                type="checkbox"
                checked={!!phase.skipHolidays}
                onChange={(e) => updatePhase(phase.id, { skipHolidays: e.target.checked })}
              />
              Skip holidays when calculating end date
            </label>
          </div>
        </div>

        <div className="detail-section">
          <h3 className="section-title">Resources</h3>
          <div style={{ display: "flex", gap: 8, marginBottom: 10 }}>
            <button className="secondary-action" onClick={() => duplicatePhase(phase.id)}>Duplicate Phase</button>
            <button className="secondary-action" onClick={() => deletePhase(phase.id)}>Delete Phase</button>
          </div>
          {(phase.resources || []).length === 0 ? (
            <p style={{ color: "var(--text-secondary)", fontSize: 14 }}>No resources assigned</p>
          ) : (
            <div style={{ display: "flex", flexDirection: "column", gap: 8 }}>
              {phase.resources.map((r) => (
                <div key={r.id} style={{
                  padding: 12,
                  background: "var(--background)",
                  borderRadius: 8,
                  display: "flex",
                  justifyContent: "space-between",
                  alignItems: "center"
                }}>
                  <div>
                    <div style={{ fontWeight: 700 }}>{r.name}</div>
                    <div style={{ fontSize: 12, color: "var(--text-secondary)" }}>
                      {r.role} ‚Ä¢ {r.allocation}% ‚Ä¢ {formatCurrency(r.hourlyRate * 8, selectedCatalogRegion)}/day
                    </div>
                  </div>
                </div>
              ))}
            </div>
          )}
        </div>
      </div>
    </div>
  );
};

