import React, { useState, useMemo } from 'react';
import { COMPLETE_PACKAGE_LIBRARY, MALAYSIA_FORMS_LIBRARY, getPackagesByCategory, validatePrerequisites } from '../data/sapPackages';

const INDUSTRIES = [
  { value: 'manufacturing', label: 'Manufacturing' },
  { value: 'services', label: 'Professional Services' },
  { value: 'retail', label: 'Retail & Distribution' },
  { value: 'technology', label: 'Technology' },
  { value: 'healthcare', label: 'Healthcare' },
  { value: 'finance', label: 'Financial Services' }
];

const COMPANY_SIZES = [
  { value: 'small', label: 'Small (< 100 employees)' },
  { value: 'medium', label: 'Medium (100-1000 employees)' },
  { value: 'large', label: 'Large (1000+ employees)' },
  { value: 'enterprise', label: 'Enterprise (5000+ employees)' }
];

const SAPScopeApp = () => {
  const [selectedPackages, setSelectedPackages] = useState([]);
  const [selectedModules, setSelectedModules] = useState({});
  const [selectedForms, setSelectedForms] = useState([]);
  const [expandedPackages, setExpandedPackages] = useState({});
  const [selectedCategory, setSelectedCategory] = useState('all');
  const [searchQuery, setSearchQuery] = useState('');
  
  const [clientProfile, setClientProfile] = useState({
    company_name: '',
    industry: 'services',
    company_size: 'medium',
    employees: 500,
    annualRevenueMYR: 200000000
  });

  const packagesByCategory = useMemo(() => getPackagesByCategory(), []);
  const categories = Object.keys(packagesByCategory);

  // Filter packages based on category and search
  const filteredPackages = useMemo(() => {
    let packages = COMPLETE_PACKAGE_LIBRARY;
    
    if (selectedCategory !== 'all') {
      packages = packages.filter(pkg => pkg.category === selectedCategory);
    }
    
    if (searchQuery) {
      packages = packages.filter(pkg => 
        pkg.name.toLowerCase().includes(searchQuery.toLowerCase()) ||
        pkg.description.toLowerCase().includes(searchQuery.toLowerCase())
      );
    }
    
    return packages;
  }, [selectedCategory, searchQuery]);

  const togglePackage = (packageId) => {
    const pkg = COMPLETE_PACKAGE_LIBRARY.find(p => p.id === packageId);
    if (!pkg) return;

    // Validate prerequisites
    const validation = validatePrerequisites(packageId, selectedPackages);
    
    setSelectedPackages(prev => {
      const isSelected = prev.includes(packageId);
      if (isSelected) {
        // Remove package and its modules
        setSelectedModules(prevModules => {
          const newModules = { ...prevModules };
          delete newModules[packageId];
          return newModules;
        });
        return prev.filter(id => id !== packageId);
      } else {
        // Add package if prerequisites are met
        if (!validation.valid) {
          alert(`Missing prerequisites: ${validation.missing.join(', ')}`);
          return prev;
        }
        return [...prev, packageId];
      }
    });
  };

  const toggleModule = (packageId, moduleId) => {
    const pkg = COMPLETE_PACKAGE_LIBRARY.find(p => p.id === packageId);
    const module = pkg?.modules.find(m => m.id === moduleId);
    if (!pkg || !module) return;

    setSelectedModules(prev => {
      const packageModules = prev[packageId] || [];
      const isSelected = packageModules.includes(moduleId);
      
      if (isSelected) {
        // Remove module
        const newPackageModules = packageModules.filter(id => id !== moduleId);
        return {
          ...prev,
          [packageId]: newPackageModules
        };
      } else {
        // Add module (check prerequisites)
        const selectedInPackage = packageModules;
        const missing = module.prerequisites.filter(prereq => !selectedInPackage.includes(prereq));
        
        if (missing.length > 0) {
          alert(`Module prerequisites missing: ${missing.join(', ')}`);
          return prev;
        }
        
        return {
          ...prev,
          [packageId]: [...packageModules, moduleId]
        };
      }
    });
  };

  const togglePackageExpansion = (packageId) => {
    setExpandedPackages(prev => ({
      ...prev,
      [packageId]: !prev[packageId]
    }));
  };

  const toggleForm = (formId) => {
    setSelectedForms(prev => {
      const isSelected = prev.includes(formId);
      return isSelected 
        ? prev.filter(id => id !== formId)
        : [...prev, formId];
    });
  };

  // Calculate totals
  const totalEffort = useMemo(() => {
    let effort = 0;
    
    // Package effort
    selectedPackages.forEach(packageId => {
      const pkg = COMPLETE_PACKAGE_LIBRARY.find(p => p.id === packageId);
      if (pkg) {
        const packageModules = selectedModules[packageId] || [];
        if (packageModules.length === 0) {
          // Full package selected
          effort += pkg.total_effort_pd;
        } else {
          // Individual modules selected
          packageModules.forEach(moduleId => {
            const module = pkg.modules.find(m => m.id === moduleId);
            if (module) effort += module.effort_pd;
          });
        }
      }
    });
    
    // Forms effort
    selectedForms.forEach(formId => {
      const form = MALAYSIA_FORMS_LIBRARY.find(f => f.id === formId);
      if (form) effort += form.effort_pd;
    });
    
    return effort;
  }, [selectedPackages, selectedModules, selectedForms]);

  const exportToTimeline = () => {
    const selectedPackageData = selectedPackages.map(packageId => {
      const pkg = COMPLETE_PACKAGE_LIBRARY.find(p => p.id === packageId);
      const packageModules = selectedModules[packageId] || [];
      
      return {
        ...pkg,
        selectedModules: packageModules,
        modules: pkg.modules.map(m => ({
          ...m,
          selected: packageModules.includes(m.id)
        }))
      };
    });

    const selectedFormData = selectedForms.map(formId => 
      MALAYSIA_FORMS_LIBRARY.find(f => f.id === formId)
    );

    const exportData = {
      packages: selectedPackageData,
      clientProfile,
      totalEffort,
      malaysiaForms: selectedFormData,
      integrations: [],
      projectServices: []
    };

    console.log('Exporting to timeline:', exportData);
    window.dispatchEvent(new CustomEvent('sapScopeExport', { detail: exportData }));
  };

  return (
    <div style={{ 
      padding: '32px', 
      fontFamily: '-apple-system, BlinkMacSystemFont, "Segoe UI", system-ui, sans-serif',
      maxWidth: '1400px',
      margin: '0 auto',
      background: 'white'
    }}>
      {/* Header */}
      <div style={{ marginBottom: '32px', textAlign: 'center' }}>
        <h1 style={{ 
          fontSize: '32px', 
          fontWeight: '900', 
          margin: '0 0 12px 0',
          color: '#1d1d1f',
          letterSpacing: '-0.5px'
        }}>
          SAP Implementation Scope Builder
        </h1>
        <p style={{ 
          fontSize: '18px', 
          color: '#6e6e73', 
          margin: 0,
          fontWeight: '400'
        }}>
          Select SAP packages, modules, and compliance forms
        </p>
      </div>

      {/* Client Profile */}
      <div style={{ 
        background: 'linear-gradient(135deg, #f8f9fa 0%, #e9ecef 100%)',
        borderRadius: '16px',
        padding: '24px',
        marginBottom: '32px',
        border: '1px solid rgba(0,0,0,0.08)'
      }}>
        <h2 style={{ fontSize: '20px', fontWeight: '800', marginBottom: '20px', color: '#1d1d1f' }}>
          Client Information
        </h2>
        
        <div style={{ display: 'grid', gridTemplateColumns: 'repeat(auto-fit, minmax(250px, 1fr))', gap: '16px' }}>
          <div>
            <label style={{ display: 'block', fontSize: '14px', fontWeight: '600', marginBottom: '8px', color: '#1d1d1f' }}>
              Company Name
            </label>
            <input
              type="text"
              value={clientProfile.company_name}
              onChange={(e) => setClientProfile({...clientProfile, company_name: e.target.value})}
              placeholder="Enter company name"
              style={{
                width: '100%',
                padding: '12px 16px',
                border: '2px solid #e5e5e7',
                borderRadius: '8px',
                fontSize: '16px',
                background: 'white',
                outline: 'none'
              }}
            />
          </div>

          <div>
            <label style={{ display: 'block', fontSize: '14px', fontWeight: '600', marginBottom: '8px', color: '#1d1d1f' }}>
              Industry
            </label>
            <select
              value={clientProfile.industry}
              onChange={(e) => setClientProfile({...clientProfile, industry: e.target.value})}
              style={{
                width: '100%',
                padding: '12px 16px',
                border: '2px solid #e5e5e7',
                borderRadius: '8px',
                fontSize: '16px',
                background: 'white'
              }}
            >
              {INDUSTRIES.map(industry => (
                <option key={industry.value} value={industry.value}>{industry.label}</option>
              ))}
            </select>
          </div>

          <div>
            <label style={{ display: 'block', fontSize: '14px', fontWeight: '600', marginBottom: '8px', color: '#1d1d1f' }}>
              Company Size
            </label>
            <select
              value={clientProfile.company_size}
              onChange={(e) => setClientProfile({...clientProfile, company_size: e.target.value})}
              style={{
                width: '100%',
                padding: '12px 16px',
                border: '2px solid #e5e5e7',
                borderRadius: '8px',
                fontSize: '16px',
                background: 'white'
              }}
            >
              {COMPANY_SIZES.map(size => (
                <option key={size.value} value={size.value}>{size.label}</option>
              ))}
            </select>
          </div>
        </div>
      </div>

      {/* Search and Filter */}
      <div style={{ marginBottom: '24px', display: 'flex', gap: '16px', alignItems: 'center' }}>
        <input
          type="text"
          placeholder="Search packages..."
          value={searchQuery}
          onChange={(e) => setSearchQuery(e.target.value)}
          style={{
            flex: 1,
            padding: '12px 16px',
            border: '2px solid #e5e5e7',
            borderRadius: '8px',
            fontSize: '14px'
          }}
        />
        
        <select
          value={selectedCategory}
          onChange={(e) => setSelectedCategory(e.target.value)}
          style={{
            padding: '12px 16px',
            border: '2px solid #e5e5e7',
            borderRadius: '8px',
            fontSize: '14px',
            minWidth: '200px'
          }}
        >
          <option value="all">All Categories</option>
          {categories.map(cat => (
            <option key={cat} value={cat}>{cat}</option>
          ))}
        </select>
      </div>

      {/* Package Selection */}
      <div style={{ marginBottom: '32px' }}>
        <h2 style={{ fontSize: '20px', fontWeight: '800', marginBottom: '20px', color: '#1d1d1f' }}>
          SAP Packages ({filteredPackages.length})
        </h2>
        
        <div style={{ display: 'grid', gap: '16px' }}>
          {filteredPackages.map(pkg => {
            const isPackageSelected = selectedPackages.includes(pkg.id);
            const packageModules = selectedModules[pkg.id] || [];
            const isExpanded = expandedPackages[pkg.id];
            const hasPartialSelection = packageModules.length > 0 && packageModules.length < pkg.modules.length;
            const validation = validatePrerequisites(pkg.id, selectedPackages);

            return (
              <div
                key={pkg.id}
                style={{
                  border: `2px solid ${!validation.valid ? '#ff3b30' : isPackageSelected ? '#007AFF' : '#e5e5e7'}`,
                  borderRadius: '12px',
                  background: isPackageSelected ? 'linear-gradient(135deg, #f0f4ff 0%, #e6f2ff 100%)' : 'white',
                  transition: 'all 0.2s ease'
                }}
              >
                <div
                  onClick={() => togglePackage(pkg.id)}
                  style={{
                    padding: '20px',
                    cursor: 'pointer',
                    display: 'flex',
                    justifyContent: 'space-between',
                    alignItems: 'flex-start'
                  }}
                >
                  <div style={{ flex: 1 }}>
                    <div style={{ display: 'flex', alignItems: 'center', gap: '12px', marginBottom: '8px' }}>
                      <span style={{ fontSize: '24px' }}>{pkg.icon}</span>
                      <h3 style={{ 
                        fontSize: '18px', 
                        fontWeight: '700', 
                        margin: 0,
                        color: '#1d1d1f'
                      }}>
                        {pkg.name}
                      </h3>
                      
                      {pkg.malaysia_verified && (
                        <span style={{
                          padding: '4px 8px',
                          background: '#34c759',
                          color: 'white',
                          borderRadius: '6px',
                          fontSize: '12px',
                          fontWeight: '600'
                        }}>
                          MY
                        </span>
                      )}
                      
                      {pkg.critical_path && (
                        <span style={{
                          padding: '4px 8px',
                          background: '#ff9500',
                          color: 'white',
                          borderRadius: '6px',
                          fontSize: '12px',
                          fontWeight: '600'
                        }}>
                          Critical
                        </span>
                      )}
                    </div>

                    <div style={{
                      display: 'inline-block',
                      padding: '4px 8px',
                      background: 'rgba(0,122,255,0.1)',
                      color: '#007AFF',
                      borderRadius: '6px',
                      fontSize: '12px',
                      fontWeight: '600',
                      marginBottom: '8px'
                    }}>
                      {pkg.category}
                    </div>

                    <p style={{ 
                      fontSize: '14px', 
                      color: '#6e6e73', 
                      margin: '0 0 12px 0',
                      lineHeight: '1.4'
                    }}>
                      {pkg.description}
                    </p>

                    <div style={{ display: 'flex', gap: '16px', fontSize: '13px', color: '#8e8e93' }}>
                      <span><strong>{pkg.total_effort_pd}</strong> person-days</span>
                      <span><strong>{pkg.modules.length}</strong> modules</span>
                      {pkg.prerequisites.length > 0 && (
                        <span>Requires: {pkg.prerequisites.join(', ')}</span>
                      )}
                    </div>

                    {!validation.valid && (
                      <div style={{
                        marginTop: '8px',
                        padding: '8px 12px',
                        background: 'rgba(255,59,48,0.1)',
                        border: '1px solid rgba(255,59,48,0.3)',
                        borderRadius: '6px',
                        fontSize: '12px',
                        color: '#ff3b30'
                      }}>
                        Missing prerequisites: {validation.missing.join(', ')}
                      </div>
                    )}
                  </div>

                  <div style={{ display: 'flex', alignItems: 'center', gap: '12px' }}>
                    <div style={{
                      width: '24px',
                      height: '24px',
                      borderRadius: '50%',
                      background: isPackageSelected ? '#007AFF' : hasPartialSelection ? '#ff9500' : '#e5e5e7',
                      display: 'flex',
                      alignItems: 'center',
                      justifyContent: 'center',
                      color: 'white',
                      fontSize: '14px',
                      fontWeight: '700'
                    }}>
                      {isPackageSelected ? '✓' : hasPartialSelection ? packageModules.length : ''}
                    </div>

                    <button
                      onClick={(e) => {
                        e.stopPropagation();
                        togglePackageExpansion(pkg.id);
                      }}
                      style={{
                        background: 'none',
                        border: 'none',
                        fontSize: '16px',
                        cursor: 'pointer',
                        padding: '4px'
                      }}
                    >
                      {isExpanded ? '▼' : '▶'}
                    </button>
                  </div>
                </div>

                {/* Module Selection */}
                {isExpanded && (
                  <div style={{
                    borderTop: '1px solid #e5e5e7',
                    padding: '16px 20px',
                    background: 'rgba(0,0,0,0.02)'
                  }}>
                    <h4 style={{ fontSize: '14px', fontWeight: '700', marginBottom: '12px', color: '#1d1d1f' }}>
                      Individual Modules:
                    </h4>
                    
                    <div style={{ display: 'grid', gap: '8px' }}>
                      {pkg.modules.map(module => {
                        const isModuleSelected = packageModules.includes(module.id);
                        const isDisabled = isPackageSelected;
                        
                        return (
                          <div
                            key={module.id}
                            onClick={() => !isDisabled && toggleModule(pkg.id, module.id)}
                            style={{
                              padding: '12px',
                              border: `1px solid ${isModuleSelected ? '#007AFF' : '#e5e5e7'}`,
                              borderRadius: '8px',
                              background: isModuleSelected ? 'rgba(0,122,255,0.05)' : 'white',
                              cursor: isDisabled ? 'not-allowed' : 'pointer',
                              opacity: isDisabled ? 0.5 : 1,
                              display: 'flex',
                              justifyContent: 'space-between',
                              alignItems: 'center'
                            }}
                          >
                            <div>
                              <div style={{ fontSize: '14px', fontWeight: '600', color: '#1d1d1f' }}>
                                {module.name}
                              </div>
                              <div style={{ fontSize: '12px', color: '#6e6e73' }}>
                                {module.description}
                              </div>
                              {module.prerequisites.length > 0 && (
                                <div style={{ fontSize: '11px', color: '#ff9500', marginTop: '4px' }}>
                                  Requires: {module.prerequisites.join(', ')}
                                </div>
                              )}
                            </div>
                            
                            <div style={{ textAlign: 'right' }}>
                              <div style={{ fontSize: '12px', fontWeight: '600', color: '#8e8e93' }}>
                                {module.effort_pd} PD
                              </div>
                              <div style={{
                                width: '16px',
                                height: '16px',
                                borderRadius: '50%',
                                background: isModuleSelected ? '#007AFF' : '#e5e5e7',
                                marginTop: '4px',
                                marginLeft: 'auto'
                              }} />
                            </div>
                          </div>
                        );
                      })}
                    </div>
                  </div>
                )}
              </div>
            );
          })}
        </div>
      </div>

      {/* Malaysia Forms Section */}
      <div style={{ marginBottom: '32px' }}>
        <h2 style={{ fontSize: '20px', fontWeight: '800', marginBottom: '20px', color: '#1d1d1f' }}>
          Malaysia Compliance Forms
        </h2>
        
        <div style={{ display: 'grid', gridTemplateColumns: 'repeat(auto-fit, minmax(300px, 1fr))', gap: '12px' }}>
          {MALAYSIA_FORMS_LIBRARY.map(form => {
            const isSelected = selectedForms.includes(form.id);
            
            return (
              <div
                key={form.id}
                onClick={() => toggleForm(form.id)}
                style={{
                  padding: '16px',
                  border: `2px solid ${isSelected ? '#007AFF' : '#e5e5e7'}`,
                  borderRadius: '8px',
                  background: isSelected ? 'rgba(0,122,255,0.05)' : 'white',
                  cursor: 'pointer',
                  transition: 'all 0.2s ease'
                }}
              >
                <div style={{ display: 'flex', justifyContent: 'space-between', alignItems: 'flex-start' }}>
                  <div style={{ flex: 1 }}>
                    <div style={{ fontSize: '14px', fontWeight: '600', marginBottom: '4px', color: '#1d1d1f' }}>
                      {form.form_name}
                    </div>
                    <div style={{ fontSize: '12px', color: '#6e6e73', marginBottom: '8px' }}>
                      {form.description}
                    </div>
                    <div style={{ display: 'flex', gap: '8px', alignItems: 'center' }}>
                      <span style={{
                        padding: '2px 6px',
                        background: form.mandatory ? 'rgba(255,59,48,0.1)' : 'rgba(0,122,255,0.1)',
                        color: form.mandatory ? '#ff3b30' : '#007AFF',
                        borderRadius: '4px',
                        fontSize: '11px',
                        fontWeight: '600'
                      }}>
                        {form.mandatory ? 'Mandatory' : 'Optional'}
                      </span>
                      <span style={{ fontSize: '12px', color: '#8e8e93' }}>
                        {form.effort_pd} PD
                      </span>
                    </div>
                  </div>
                  
                  <div style={{
                    width: '20px',
                    height: '20px',
                    borderRadius: '50%',
                    background: isSelected ? '#007AFF' : '#e5e5e7',
                    display: 'flex',
                    alignItems: 'center',
                    justifyContent: 'center',
                    color: 'white',
                    fontSize: '12px',
                    fontWeight: '700'
                  }}>
                    {isSelected ? '✓' : ''}
                  </div>
                </div>
              </div>
            );
          })}
        </div>
      </div>

      {/* Summary and Export */}
      <div style={{
        background: 'linear-gradient(135deg, #f0f4ff 0%, #e6f2ff 100%)',
        borderRadius: '16px',
        padding: '24px',
        border: '1px solid rgba(0,122,255,0.2)'
      }}>
        <div style={{ 
          display: 'flex', 
          justifyContent: 'space-between', 
          alignItems: 'center',
          flexWrap: 'wrap',
          gap: '16px'
        }}>
          <div>
            <h3 style={{ 
              fontSize: '18px', 
              fontWeight: '800', 
              margin: '0 0 8px 0',
              color: '#1d1d1f'
            }}>
              Implementation Summary
            </h3>
            <div style={{ fontSize: '14px', color: '#6e6e73' }}>
              <strong>{selectedPackages.length}</strong> packages • 
              <strong> {Object.values(selectedModules).flat().length}</strong> modules • 
              <strong> {selectedForms.length}</strong> forms • 
              <strong> {totalEffort.toFixed(1)}</strong> person-days
            </div>
          </div>

          <button
            onClick={exportToTimeline}
            disabled={selectedPackages.length === 0}
            style={{
              padding: '16px 32px',
              fontSize: '16px',
              fontWeight: '700',
              border: 'none',
              borderRadius: '12px',
              background: selectedPackages.length > 0 
                ? 'linear-gradient(135deg, #007AFF 0%, #0056CC 100%)' 
                : '#e5e5e7',
              color: selectedPackages.length > 0 ? 'white' : '#8e8e93',
              cursor: selectedPackages.length > 0 ? 'pointer' : 'not-allowed',
              transition: 'all 0.2s ease',
              boxShadow: selectedPackages.length > 0 ? '0 4px 16px rgba(0,122,255,0.3)' : 'none'
            }}
          >
            Export to Timeline
          </button>
        </div>

        {selectedPackages.length === 0 && (
          <div style={{
            marginTop: '16px',
            padding: '12px',
            background: 'rgba(255,149,0,0.1)',
            border: '1px solid rgba(255,149,0,0.3)',
            borderRadius: '8px',
            fontSize: '14px',
            color: '#ff9500'
          }}>
            Please select at least one SAP package to continue
          </div>
        )}
      </div>
    </div>
  );
};

export default SAPScopeApp;