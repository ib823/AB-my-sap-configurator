import React from "react";
import { useApp } from "./AppProvider";

export const SAPScopeApp = () => {
  const { state, setSelectedView, updatePackage, updateClientProfile, calculateTotalEffort } = useApp();
  const totalEffort = calculateTotalEffort();
  
  return (
    <div className="min-h-screen bg-gradient-to-br from-gray-50 to-blue-50 p-6">
      <div className="max-w-7xl mx-auto">
        <div className="mb-8 text-center">
          <h1 className="text-4xl font-bold text-blue-600 mb-2">SAP Implementation Scope Builder</h1>
          <p className="text-gray-600">Configure your SAP implementation</p>
        </div>
        
        <div className="bg-white rounded-lg shadow-sm p-6 mb-6">
          <h3 className="text-lg font-semibold mb-4">Client Profile</h3>
          <div className="grid grid-cols-3 gap-4">
            <input
              type="text"
              placeholder="Company Name"
              value={state.clientProfile.company_name}
              onChange={(e) => updateClientProfile({ company_name: e.target.value })}
              className="px-3 py-2 border rounded-lg"
            />
            <select
              value={state.clientProfile.industry}
              onChange={(e) => updateClientProfile({ industry: e.target.value })}
              className="px-3 py-2 border rounded-lg"
            >
              <option value="">Select Industry</option>
              <option value="manufacturing">Manufacturing</option>
              <option value="services">Services</option>
            </select>
            <select
              value={state.clientProfile.company_size}
              onChange={(e) => updateClientProfile({ company_size: e.target.value })}
              className="px-3 py-2 border rounded-lg"
            >
              <option value="">Select Size</option>
              <option value="sme">SME</option>
              <option value="large">Large</option>
            </select>
          </div>
        </div>
        
        <div className="bg-white rounded-lg shadow-sm">
          <div className="border-b flex">
            <button
              onClick={() => setSelectedView("packages")}
              className={`px-6 py-3 font-medium ${state.selectedView === "packages" ? "text-blue-600 border-b-2 border-blue-600" : "text-gray-600"}`}
            >
              Packages
            </button>
            <button
              onClick={() => setSelectedView("forms")}
              className={`px-6 py-3 font-medium ${state.selectedView === "forms" ? "text-blue-600 border-b-2 border-blue-600" : "text-gray-600"}`}
            >
              Forms
            </button>
            <button
              onClick={() => setSelectedView("services")}
              className={`px-6 py-3 font-medium ${state.selectedView === "services" ? "text-blue-600 border-b-2 border-blue-600" : "text-gray-600"}`}
            >
              Services
            </button>
          </div>
          
          <div className="p-6">
            {state.selectedView === "packages" && (
              <div className="space-y-4">
                {state.packages.map(pkg => (
                  <div key={pkg.id} className={`border rounded-lg p-4 ${pkg.selected ? 'bg-blue-50' : ''}`}>
                    <div className="flex justify-between">
                      
                        <h4 className="font-semibold">{pkg.icon} {pkg.name}</h4>
                        <p className="text-sm text-gray-600">{pkg.description}</p>
                        <p className="text-sm">{pkg.total_effort_pd} PD - SGD ${pkg.sgd_price.toLocaleString()}</p>
                      </div>
                      <button
                        onClick={() => updatePackage(pkg.id, { selected: !pkg.selected })}
                        className={`px-4 py-2 rounded ${pkg.selected ? 'bg-blue-600 text-white' : 'bg-gray-200'}`}
                      >
                        {pkg.selected ? 'Selected' : 'Select'}
                      </button>
                    </div>
                  </div>
                ))}
              </div>
            )}
          </div>
        </div>
        
        {totalEffort > 0 && (
          <div className="fixed bottom-4 right-4 bg-white shadow-xl rounded-lg p-4">
            <span className="font-bold">{totalEffort} PD</span>
          </div>
        )}
      </div>
    </div>
  );
};
export default SAPScopeApp;
